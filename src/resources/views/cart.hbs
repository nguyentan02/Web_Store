<script>
    document.addEventListener('DOMContentLoaded', function () {

        const totalSection = document.querySelector('.section-total');


        const totalPrice = parseFloat(document.querySelector('.totalprice').innerText);


        if (totalPrice === 0) {

            totalSection.style.display = 'none';
        } else {

            totalSection.style.display = 'block';
        }

        //skip Steps
        const orderButton = document.querySelector('.btn-submit');
        const breadcrumbCart = document.querySelector('.breadcrumb-cart')
        const steps = document.querySelectorAll('.step');
        const cardInfo = document.querySelectorAll('.cart-info')
        let currentCartIndex = 0;
        const userId = localStorage.getItem('userId')
        orderButton.addEventListener('click', function () {
            breadcrumbCart.innerHTML = `  <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/api/v1/cart/showCart?userId=${userId}"><i class="bi bi-chevron-left"></i>Tro ve</a></li>
            </ol>
        </nav>`
            cardInfo[currentCartIndex].classList.add('d-none');
            // Chuyển đến cart-info tiếp theo
            currentCartIndex++;
            if (currentCartIndex >= cardInfo.length) {
                currentCartIndex = 0; // Quay lại cart-info đầu tiên nếu đã đến cuối danh sách
            }
            cardInfo[currentCartIndex].classList.remove('d-none');
            for (let i = 0; i < steps.length; i++) {
                if (!steps[i].classList.contains('active')) {
                    steps[i].classList.add('active');
                    break;
                }
            }
        });
        //Submit cart To Order
        const orderForm = document.getElementById('form-orderCart')


        const userIdCart = document.querySelector('input[name="userId"]').value;
        const totalPriceElement = document.querySelector('.totalprice').textContent;
        const btnOrder = document.querySelector('.btn-end');
        orderForm.addEventListener('submit', async function (e) {
            e.preventDefault();
            const formData = new FormData(orderForm);

            const cartIdInputs = document.querySelectorAll('input[name="cartId"]');
            cartIdInputs.forEach(input => {
                formData.append('cartId', input.value);
            });
            formData.append('userId', userIdCart);
            formData.append('totalPrice', totalPriceElement)
            for (const [key, value] of formData.entries()) {
                console.log(`${key}: ${value}`);
            }
            try {
                const response = await fetch('/api/v1/order/create', {
                    method: 'POST',
                    body: formData,
                });

                if (response.ok) {
                    alert('Danh mục sản phẩm đã được tạo thành công!');
                    cardInfo[currentCartIndex].classList.add('d-none');
                    // Chuyển đến cart-info tiếp theo
                    currentCartIndex++;
                    if (currentCartIndex >= cardInfo.length) {
                        currentCartIndex = 0; // Quay lại cart-info đầu tiên nếu đã đến cuối danh sách
                    }
                    cardInfo[currentCartIndex].classList.remove('d-none');
                    for (let i = 0; i < steps.length; i++) {
                        if (!steps[i].classList.contains('active')) {
                            steps[i].classList.add('active');
                            break;
                        }
                    }

                } else {
                    const responseData = await response.json();
                    alert(responseData.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Something went wrong. Please try again.');
            }
        })

        //DeletedCart
        var deleteForm = document.forms['delete-cart-form'];
        const btnDelCourses = document.querySelectorAll('.delete-item');
        btnDelCourses.forEach(button => {
            const cartItemid = button.getAttribute('data-id')
            button.onclick = function () {
                deleteForm.action = '/api/v1/cart/deleted/' + cartItemid + '?_method=DELETE';
                deleteForm.submit();
            }
        })

        var updateCart = document.forms['update-cart-form'];
        const qtyPlusBtns = document.querySelectorAll('.qtyplus');
        const qtyMinusBtns = document.querySelectorAll('.qtyminus');
        qtyPlusBtns.forEach(button => {
            button.addEventListener('click', function (e) {
                const parentContainer = button.closest('.qty');
                const input = parentContainer.querySelector('.qty-cost');
                let quantity = parseInt(input.value);
                quantity = quantity <= 1 ? 1 : quantity - 1;
                input.value = quantity;
                const cartId = input.getAttribute('data-product');
                const url = `/api/v1/cart/update/${cartId}?_method=PUT&quantity=${input.value}`;
                // Gửi yêu cầu đến máy chủ
                fetch(url, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    // Bạn có thể truyền thêm dữ liệu khác trong body nếu cần
                    body: JSON.stringify({ quantity: input.value })
                })
                    .then(response => {
                        window.location.reload()
                        if (!response.ok) {
                            throw new Error('Có lỗi xảy ra khi cập nhật giỏ hàng');
                        }
                        // Xử lý phản hồi từ máy chủ
                        return response.json();
                    });
            })
        })
        qtyMinusBtns.forEach(button => {
            button.addEventListener('click', function (e) {
                const parentContainer = button.closest('.qty');
                const input = parentContainer.querySelector('.qty-cost');
                let quantity = parseInt(input.value);
                input.value = quantity + 1;
                const cartId = input.getAttribute('data-product');
                const url = `/api/v1/cart/update/${cartId}?_method=PUT&quantity=${input.value}`;
                // Gửi yêu cầu đến máy chủ
                fetch(url, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    // Bạn có thể truyền thêm dữ liệu khác trong body nếu cần
                    body: JSON.stringify({ quantity: input.value })
                })
                    .then(response => {
                        window.location.reload()
                        if (!response.ok) {
                            throw new Error('Có lỗi xảy ra khi cập nhật giỏ hàng');
                        }
                        // Xử lý phản hồi từ máy chủ
                        return response.json();
                    });

            })

        })

        const selectElement = document.querySelector('.province');
        const districtElement = document.querySelector('.district');
        const wardElement = document.querySelector('.ward')
        fetch('https://vapi.vnappmob.com/api/province')
            .then(response => response.json())
            .then(data => {
                let provinces = data.results
