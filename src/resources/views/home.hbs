    <div class="listproduct">
        {{#each products}}
        <div class="card item ">
            <a href="/api/v1/{{this._id}}/detail" class="">
                <div class="product_img">
                    <img src="/productImgs/{{this.image}}" class="card-img-top" alt="...">
                </div>
                <div class="card-info">
                    <h3 class="card-title product_name">{{this.name}}</h3>
                    <div class="product_badge">
                        <p class="more_info">{{this.screen}}</p>
                        <p class="more_info">{{this.storageCapacity}}</p>
                    </div>
                    <div class="box-price">
                        <p class="price-show">{{this.price}}đ</p>
                        <p class="price-through">9898</p>
                    </div>
                    <ul class="product_info">
                        <li>{{this.chip}}</li>
                        <li>{{this.ram}}</li>
                        <li>{{this.storageCapacity }}</li>
                        <li>{{this.rearCamera}}</li>
                    </ul>
